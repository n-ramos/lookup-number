{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": ".",
    "outDir": "build",
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rewriteRelativeImportExtensions": true,
    "types": ["node"]
  },
  "include": [
    "ace.ts",
    "bin/**/*.ts",
    "app/**/*.ts",
    "commands/**/*.ts",
    "config/**/*.ts",
    "database/**/*.ts",
    "start/**/*.ts",
    "scripts/**/*.ts"
  ],
  "exclude": ["node_modules", "build", "tests", "bot"]
}
